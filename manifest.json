{
  "manifest_version": 3,
  "name": "AdFreeTube",
  "version": "1.2.1",
  "description": "A Chrome extension for ad-free YouTube viewing that prevents algorithm manipulation and protects your privacy.",
  
  "permissions": [
    "tabs",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AdFreeTube",
    "default_icon": "icon.png"
  },
  
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}